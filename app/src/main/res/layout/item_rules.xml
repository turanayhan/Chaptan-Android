<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <data>
        <variable
            name="driverUser"
            type="com.hrdijital.chaptan.models.DriverRules"/>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="75dp"
    >


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout21"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_file"
            />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintWidth_min="150dp"
        android:id="@+id/linearLayout22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toEndOf="@+id/linearLayout21"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom|left"
            android:paddingBottom="2dp"
            android:text="@{driverUser.title}"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@{driverUser.colorControl()}"
            android:gravity="center|top|left"
            android:paddingTop="2dp"
            android:text="@{driverUser.textControl()}"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:visibility="@{driverUser.statusControl()}"
        android:background="@drawable/checked_false"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

</layout>